{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      // "args": ["<", "1.in"], //Dacă la debug vrem stdin dintr-un fișier 1.in  
      "stopAtEntry": true,
      "externalConsole": false,
      "cwd": "${fileDirname}",
      "program": "${fileDirname}/num_bits",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}